<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- <script src="//code.jquery.com/jquery-1.11.1.min.js"></script> -->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="../css/mutual.css">
    <link rel="stylesheet" href="../css/index.css">

    <title>首頁</title>
</head>

<body>
    <!-- 導覽列 -->
    <%-include ("nav.ejs")%>

    <!-- 輪播 -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <% var activity_carousel=JSON.parse(data)[3] %>

            <% activity_carousel.forEach(function(item,idx) { %>
            <div class="carousel-item active">
                <!-- 這裡路徑到時候要改成upload -->
                <img class="d-block w-100" src="../image/activity/<%= item.activityFile %>" alt="First slide">
                <div class="carousel-caption d-none d-md-block">

                    <button type="button"
                        class="btngoshop btn btn-outline-light btn-lg "><%= item.articleFile %></button>
                </div>
            </div>
            <% }) %>
            <div class="carousel-item">
                <img class="d-block w-100" src="../img/basic/03.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">

                    <button type="button" class="btngoshop btn btn-outline-light btn-lg ">購票去</button>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../img/basic/04.jpg" alt="Third slide">
                <button type="button" class="btngoshop btn btn-outline-light btn-lg ">購票去</button>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="box">
        <!-- 活動資訊 -->

        <p class="sub_title">活動資訊</p>
        <div>
            <table class="">
                <thead>
                    <tr>
                        <th>日期</th>
                        <th>狀態</th>
                        <th>活動</th>
                        <th>活動說明</th>
                    </tr>
                </thead>
                <tbody>
                    <% var activityT=JSON.parse(data)[0] %>
                    <% activityT.forEach(element=> { %>
                    <tr>
                        <% let date=element.performDate %>
                        <td class="p-1 td_time">
                            <%= date.substring(0,4)+'年' + date.substring(5,7)+'月' +
                                                date.substring(8,9)+'日'%>
                        </td>
                        <td class="p-1">
                            <p class="badge badge-secondary rounded-0">即將登場</p>
                        </td>
                        <td class="p-1 td_title">
                            <b><a href="/activity/single/<%= element.activityId %>"><%= element.activityTitle%></a></b>
                        </td>
                        <td class="p-1 ">
                            <p class="act_content"><%= element.activityContent%></p>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>


        <% var band=JSON.parse(data)[1] %>
        <p class="sub_title">樂團簡介</p>

        <div class="swiper-container">
            <div class="swiper-wrapper">

                <% band.forEach(element=> { %>
                <div class="swiper-slide">
                    <img src="../image/band/<%=element.bandFile  %>" alt="">


                    <div class="imagetext">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="" class="bi bi-heart-fill"
                            viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                        </svg>
                        追蹤

                        <p><%=element.bandName  %></p>
                    </div>


                </div>

                <% }); %>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>

        <!-- 活動投稿 -->

        <p class="sub_title">參戰心得</p>
        <div class="live">
            <% var articleP=JSON.parse(data)[2] %>
            <% articleP.forEach(function(item,idx){ %>
            <div class="introimg">
                <img src="../image/upload/article/<%= item.articleFile %>" alt="">
            </div>
            <div>
                <a href="/article/item/<%= item.articleId %>">
                    <p><b><%= item.articleTitle%></b></p>
                </a>
                    <p class="art_cont_sec"><%= item.articleContent%></p>
                
                <p style="text-align:right"><span class="arc_time"><%= item.articleTime.substring(0,4)+'.'+ item.articleTime.substring(5,7)+'.' +
                    item.articleTime.substring(8,10)%></span></p>
            </div>
            <div class="introsvg">
                <a href="/article/item/<%= item.articleId %>">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                        stroke="var(--color2)" class="bi bi-chevron-compact-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M6.776 1.553a.5.5 0 0 1 .671.223l3 6a.5.5 0 0 1 0 .448l-3 6a.5.5 0 1 1-.894-.448L9.44 8 6.553 2.224a.5.5 0 0 1 .223-.671z" />
                    </svg>
                </a>
            </div>
            <% }) %>
        </div>


    </div>




    <!-- footer -->
    <%-include ("footer.ejs")%>
    <!-- Swiper JS -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 5,
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            }
        });
    </script>

    <script>
        // $(".imagetext").on("mouseover",function(e){
        //     $(".fa-heart-o").addClass("fa-heart-ok");
        //     $(".fa-heart-o").siblings().removeClass("fa-heart-ok");
        // })
    </script>

</body>



</html>