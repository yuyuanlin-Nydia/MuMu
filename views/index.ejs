<body>
    <!-- 導覽列 -->
    <%-include ("nav.ejs")%>



    <!-- 輪播 -->
   <p>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <% var activity_carousel=JSON.parse(data)[3] %>
    
                <% activity_carousel.forEach(function(item,idx) { %>
                <div class="carousel-item <%= (idx == 0)? 'active': '' %> ">
                    <!-- 這裡路徑到時候要改成upload -->
                    <img class="d-block w-75" src="http://localhost:3000/image/upload/activity/<%= item.activityFile %> "
                        alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
    
                        <button type="button" class="btn">購票去</button>
                    </div>
                </div>
                <% }) %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    
    
        <div class="box">
            <!-- 活動資訊 -->
    
            <p class="sub_title">活動資訊</p>
            <div>
                <table class="">
                    <thead>
                        <tr>
                            <th>日期</th>
                            <th>狀態</th>
                            <th>活動</th>
                            <th>活動說明</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var activityT=JSON.parse(data)[0] %>
                        <% activityT.forEach(element=> { %>
                        <tr>
                            <% let date=element.performDate %>
                            <td class="p-1 td_time">
                                <%= date.substring(0,4)+'年' + date.substring(5,7)+'月' +
                                                    date.substring(8,10)+'日'%>
                            </td>
                            <td class="p-1">
                                <p class="badge badge-secondary rounded-0">即將登場</p>
                            </td>
                            <td class="p-1 td_title">
                                <b><a href="/activity/single/<%= element.activityId %>"><%= element.activityTitle%></a></b>
                            </td>
                            <td class="p-1 ">
                                <p class="act_content"><%= element.activityContent%></p>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
    
    
            <% var band=JSON.parse(data)[1] %>
            <p class="sub_title">樂團簡介</p>
    
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    <% let collectarray=[]; %>
                    <% JSON.parse(data)[4].forEach(element => {collectarray.push(element.bandId)}) %>
    
                    <% band.forEach(element=> { %>
                    <div class="swiper-slide">
                        <img src="../image/band/<%=element.bandFile  %>" alt="">
    
    
                        <div class="imagetext">
                            <!-- <svg bandid="<%= element.bandId%>" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="" class="bi bi-heart-fill"
                                viewBox="0 0 16 16">
                                <path bandid="<%= element.bandId%>" fill-rule="evenodd"
                                    d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                            </svg> -->
        
                            <span userid="<%= userid%>" bandid="<%= element.bandId%>"
                                class="collect glyphicon glyphicon-star<%= collectarray.includes(element.bandId)?' ':'-empty' %>  " 
                                id="btn_collect_icon" aria-hidden="true">收藏</span>

                            <!-- <p>追蹤</p> -->
                            <p class="m-5"><%=element.bandName %></p>
                        </div>
    
    
                    </div>
    
                    <% }); %>
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
    
            <!-- 活動投稿 -->
    
            <p class="sub_title">參戰心得</p>
            <div class="live">
                <% var articleP=JSON.parse(data)[2] %>
                <% articleP.forEach(function(item,idx){ %>
                    <div class="introimg">
                        <img src="../image/upload/article/<%= item.articleFile %>" alt="">
                    </div>
                    
                    <a href="/article/item/<%= item.articleId %>">    
                    <div>
                        <p><b><%= item.articleTitle%></b></p>
                        <p class="art_cont_sec"><%= item.articleContent%></p>
                        
                        <p style="text-align:right"><span class="arc_time"><%= item.articleTime.substring(0,4)+'.'+ item.articleTime.substring(5,7)+'.' +
                            item.articleTime.substring(8,10)%></span></p>
                        </div>
                    </a>
                <div class="introsvg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            stroke="var(--color2)" class="bi bi-chevron-compact-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M6.776 1.553a.5.5 0 0 1 .671.223l3 6a.5.5 0 0 1 0 .448l-3 6a.5.5 0 1 1-.894-.448L9.44 8 6.553 2.224a.5.5 0 0 1 .223-.671z" />
                        </svg>
                </div>
                <% }) %>
            
            </div>
        </div>

    </main>    
        <!-- footer -->
        <%-include ("footer.ejs")%>
        <!-- Swiper JS -->
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

        <!-- Initialize Swiper -->
        <script>
            var swiper = new Swiper('.swiper-container', {
                slidesPerView: 5,
                loop: true,
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                }
            });

            $(".glyphicon").on("click", function () {
                if (event.target.getAttribute("userid") == 9999) alert("請先登入")
                else {
                    $(this).toggle();
                    var datajson = {
                        bandId: event.target.getAttribute("bandid"),
                        userId: event.target.getAttribute("userid"),



                    }
                    $.ajax({
                        type: "post",
                        contentType: "application/json",
                        url: "/collection",
                        data: JSON.stringify(datajson)
                    }).then(function (e) {
                        alert(e);
                    })
                }
            })

            // $(".bi-heart-fill").on("click",function(event){
            //     alert(event.target.getAttribute("bandid"))
            //     console.log(event.target)
            // })
