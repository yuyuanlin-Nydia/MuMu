<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>樂團簡介</title>
    <link rel="stylesheet" href="../../css/bandall.css">
    <link rel="stylesheet" href="../../css/mutual.css">
    <link rel="stylesheet" href="../../css/Bootstrap/bootstrap.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">

    <style>
       
    </style>
</head>

<body>
    <%-include ("../nav.ejs")%>

        <div class="banner">
            <p class="banner_title">樂團簡介</p>
        </div>
        <div class="wrapper row3" id="main">
            <main class="hoc container clear">

                <!-- 搜尋欄 -->
                <div class="float-right mb-3 mr-4 searchpo">
                    <!-- <input type="text" id="search" class="form_input" style="background-color: var(--color4);" placeholder="搜尋相關文章" name="search_text">
                    <button id="sub"><i class="fas fa-search btn_search"></i></button> -->
                    <input type="text" placeholder="搜尋樂團" id="search" class="form_input" style="background-color: var(--color4);">
                    <button id="sub" onclick="mysearch()"><i class="fas fa-search btn_search"></i></button>
                    <style id="search_style"></style>
                </div>
                <!-- 列表 -->

                <% const idList=data.map(item => Object.values(item)[0]);  %>
                    <% const nameList=data.map(item => Object.values(item)[1]);  %>
                        <% const introList=data.map(item => Object.values(item)[2]);  %>
                            <% const imgList=data.map(item => Object.values(item)[3]);  %>

                                <ul class="nospace group overview" id="itemContainer">
                                    <% for(item in nameList){%>


                                        <li class="one_third searchable" data-index="<%- nameList[item] %>">

                                            <figure>
                                                <a href="../band/ <%- idList[item] %>"></a> <img class="bandPhoto" src="/image/band/<%- imgList[item] %>" alt=""></a>
                                                <figcaption>
                                                    <p class="heading">
                                                        <%- nameList[item] %>
                                                    </p>
                                                    <p class="bandIntro">
                                                        <%- introList[item] %>
                                                    </p>

                                                </figcaption>
                                            </figure>
                                        </li>

                                        <% } %>



            </main>
        </div>
        <!-- 搜尋 -->
        <script>
            window.onload = search;

            function search() {
                var searchStyle = document.getElementById('search_style');
                document.getElementById('sub').addEventListener('click', function() {
                    var text = document.getElementById('search')
                    if (!text.value) {
                        searchStyle.innerHTML = "";
                        return;
                    }
                    // look ma, no indexOf!
                    searchStyle.innerHTML = ".searchable:not([data-index*=\"" + text.value.toLowerCase() + "\"]) { display: none; }";
                    // beware of css injections!
                });
            }

            // 快捷搜尋
            window.addEventListener('keydown', function(e) {
                if (e.keyCode == 49) {
                    document.getElementById('search').value = '美秀'
                }
            }, false);
        </script>



        <%-include ("../footer.ejs")%>



</body>

</html>