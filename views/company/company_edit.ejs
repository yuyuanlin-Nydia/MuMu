        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        <script>
                  //需要知道更改哪個東西所以要使用id單純顯示更改資訊還沒有更改
        function Edit(id) {
            $.ajax({
                url: "/company/edit/detail/",
                type: "GET",
                success: function(res) {
                    // JSON.parse() 方法把會把一個JSON字串轉換成 JavaScript的數值或是物件。另外也可選擇使用reviver函數讓這些數值或是物件在被回傳之前做轉換
                    // 因為這個JSON.stringify(new Success('update success')),所以回傳到前端的是json格式
                    var res = JSON.parse(res)
                    //將數據庫res的回傳的data裡的值傳遞進input標籤裡
                    $("input[name='e_mail']").val(res.data.companyEmail)
                    $("input[name='phone']").val(res.data.companyPhone)
                    // $("input[name='city']").val(res.data.city)
                    // $("input[name='town']").val(res.data.town)
                    $("input[name='address']").val(res.data.companyAddress)
                    
                },
                error: function() {
                    alert("系統錯誤!")
                },
            })
        }

        </script>
